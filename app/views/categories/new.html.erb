<div id="page-content">
  <div class="container">
    <h1 class="text-center mt-4">Create a new category</h1>
    <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors', obj: @category %>
        <%= form_with(model: @category, class: "shadow p-3 mb-3 rounded bg-info", local: true) do |f| %>
        <div class="form-group row mb-4">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
          </div>
        </div>
          <div class="form-goup row mb-4">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
      </div>

    </div>

  </div>
</div>
