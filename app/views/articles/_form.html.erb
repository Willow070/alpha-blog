<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors' %>
    <%= form_with(model: @article, class: "shadow p-3 mb-3 rounded bg-info", local: true) do |f| %>
      <div class="form-group row mb-4">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded" %>
        </div>
      </div>
      <div class="form-goup row mb-4">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded"  %>
        </div>
      </div>
      <div class="form-goup row mb-4">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>

  <%= render 'back_to_list' %>
</div>
